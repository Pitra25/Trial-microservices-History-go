{
  "version": "0.2.0",
  "configurations": [
    // Basic configuration: running the current package
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "showLog": false,  // Enable verbose logging
      "trace": "error"  // More detailed logs
    },

    // Run the current file (if it is the main package)
    {
      "name": "Launch Current File",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${file}",
      "args": [],
      "env": {
        "ENV": "development"
      }
    }
  ]
}